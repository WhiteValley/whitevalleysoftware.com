<section id="contact" class="wrap">
    @*<div class="auto-scroll scroll-down scroll-link"><a id="intro-scroll" href="#contact" class="animated"><span class="fa fa-angle-down"></span></a></div>*@
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <article class="content">
                    <header><h1>Get in touch</h1></header>
                    <ul class="contact-details symantic">
                        <li><span class="fa fa-phone"></span><span>020 3239 8328</span></li>
                        <li><a href="mailto:hi@whitevalleysoftware.com" title="Email White Valley"><span class="fa fa-envelope"></span>hi@whitevalleysoftware.com</a></li>
                    </ul>
                    <h2>Follow Us</h2>
                    <ul class="contact-details symantic">
                        <li><a href="https://twitter.com/whitevalleysoft" title="Follow White Valley Software on Twitter"><span class="fa fa-twitter"></span>@@whitevalleysoft</a></li>
                        <li><a href="https://plus.google.com/+WhiteValleySoftwareUK" title="Follow White Valley Software on Google+"><span class="fa fa-google-plus"></span>+WhiteValleySoftwareUK</a></li>
                    </ul>
                </article>
            </div>
            <div class="col-md-6 col-xs-12">
                <article class="content">
                    <header><h1>Ask us anything</h1></header>
                    <form role="form" method="POST" action="/#contact">
                        @Html.ValidationSummary("Oops!", new { @class = "alert alert-danger" })
                        <div class="form-group hidden">
                            <label for="Captcha">Captacha</label>
                            @Html.TextBox("Captcha", null, new { @class = "form-control wv-form-control", rows = 5, placeholder = "Please leave empty" })
                            <p class="help-block wv-help-block">Please leave empty.</p>
                        </div>
                        <div class="form-group">
                            <label for="name">Who are you?</label>
                            @Html.TextBox("Name", null, new { @class = "form-control wv-form-control", placeholder = "Your name" })
                        </div>
                        <div class="form-group">
                            <label for="contact">How should we contact you?</label>
                            @Html.TextBox("Contact", null, new { @class = "form-control wv-form-control", placeholder = "Your email address/phone number" })
                            <p class="help-block wv-help-block">Enter your email address and/or phone number if you would like us to reply.</p>
                        </div>
                        <div class="form-group">
                            <label for="message">How can we help?</label>
                            @Html.TextArea("Message", null, new { @class = "form-control wv-form-control", rows = 5, placeholder = "Be nice :-)" })
                        </div>
                        <button type="submit" class="btn btn-default wv-btn">Send message</button>
                        @Html.AntiForgeryToken()
                    </form>
                </article>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script type="text/javascript" src="/scripts/skrollr.min.js"></script>
    <script type="text/javascript">

        var eventName = {
            onAnimationEnd: 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend'
        }

        $(function () {

            if ($(window).width() >= 768) {
                skrollr.init(); @* disable skrollr on 'mobile' *@
            }

            @* animated scroll from the index -  http://stackoverflow.com/a/5284836/88053 *@
            var scrollToAnchor = function () {
                var target = $(this.hash);
                target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                if (target.length) {
                    $('body, html').animate({
                        scrollTop: target.offset().top
                    }, 1000);
                }
                return false;
            }
            $('.scroll-link a').click(scrollToAnchor);

        });


        $(function () {
            var elm = $('#intro-scroll');
            var timer = setInterval(function () {
                var css = 'rubberBand';
                elm.addClass(css).one(eventName.onAnimationEnd, function () {
                    elm.removeClass(css);
                });
            }, 5000);
            $(document).on('scroll', function () {
                clearInterval(timer);
            });
        });

    </script>

}
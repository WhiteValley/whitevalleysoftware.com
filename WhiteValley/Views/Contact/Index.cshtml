@model WhiteValley.ViewModels.ContactRequest
@{
    Page.Title = "Contact White Valley";
}
@section Meta {
    <meta name="description" content="Get in contact with White Valley to discus your next project or ask us anything" />
}

<section id="intro" class="wrap wrap-primary header header-slim">
    <div @*class="bg" data-0="background-position: 50% 70px;" data-top-bottom="background-position: 50% -100px;" data-anchor-target="#header"*@>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <article class="content centertext">
                        <h1>WHAT'S ON YOUR MIND?</h1>
                        <p>Whether you want to discuss your next project or just say hello, we're here to listen. <br />We're very sociable and would love to hear from you.</p>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact-form" class="wrap">
    @*<div class="auto-scroll scroll-down scroll-link"><a id="intro-scroll" href="#contact-form" class="animated"><span class="fa fa-angle-down"></span></a></div>*@
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <article class="content">
                    <header><h1>Get in touch</h1></header>
                    @*<p>Enter your message below. If you would like us to reply then please also enter your email and/or phone number.</p>*@
                    @Html.ValidationSummary("")
                    @using (Html.BeginForm())
                    {
                        <div class="form-group hidden">
                            <label for="Captcha">Captacha</label>
                            @Html.TextBox("Captcha", null, new { @class = "form-control wv-form-control", rows = 5, placeholder = "Please leave empty" })
                            <p class="help-block wv-help-block">Please leave empty.</p>
                        </div>
                        <div class="form-group">
                            <label for="Message">How can we help? @Html.ValidationMessageFor(x => x.Message, "*")</label>
                            @Html.TextAreaFor(x => x.Message, 5, 10, new { @class = "form-control input-lg", placeholder = "Enter your message..." })
                        </div>
                        <div class="form-group">
                            <label for="Name">Who are you? (optional)</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-lg", placeholder = "Your name" })
                        </div>
                        <div class="form-group">
                            <label for="Contact">How should we contact your? (optional)</label>
                            @Html.TextBoxFor(x => x.Contact, new { @class = "form-control input-lg", placeholder = "Enter your email/phone number..." })
                            <p class="help-block wv-help-block pull-right">Enter your email address and/or phone number if you would like us to reply.</p>
                        </div>
                        <div class="form-action">
                            <button class="btn btn-primary btn-lg" type="submit" data-loading-text="Sending...">Send message</button>
                        </div>
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="form-privacy">
                                <div class="clearfix"><a class="pull-right" data-toggle="collapse" href="#form-privacy" aria-expanded="false">privacy</a></div>
                                <div id="form-privacy" class="collapse">
                                    <p class="help-block wv-help-block">
                                        If you provide contact details then we will only contact regarding your request. The information you provide in this form will be emailed to us
                                        so it should therefore be assumed that anything you enter can be read by White Valley staff,
                                        Google Mail and GCHQ/NSA ;-) Please don't provide information of a sensitive nature. For more details view our
                                        <a href="/privacy-policy" title="Privicy Policy of White Valley Software">privacy policy</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </article>
            </div>
            <div class="col-md-4">
                <article class="content">
                    <h1>Join in</h1>
                    <ul class="symantic icon-list">
                        <li><span class="fa fa-phone"></span><span>020 3239 8328</span></li>
                        <li><a href="mailto:hi@whitevalleysoftware.com" title="Email White Valley"><span class="fa fa-envelope"></span>hi@whitevalleysoftware.com</a></li>
                        <li><a href="https://twitter.com/whitevalleysoft" title="Follow White Valley Software on Twitter"><span class="fa fa-twitter"></span>@@whitevalleysoft</a></li>
                        <li><a href="https://plus.google.com/+WhiteValleySoftwareUK" title="Follow White Valley Software on Google+"><span class="fa fa-google-plus"></span>+WhiteValleySoftwareUK</a></li>
                    </ul>
                </article>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script type="text/javascript">
        $('.btn[data-loading-text]').click(function () {
            var btn = $(this);
            btn.button('loading');
        });
    </script>
}
    }
</head>
<body id="body" class="">
    <div id="navigation" class="">
        <nav class="navbar navbar-default navbar-fixed-top menubar" role="navigation" data-0="background-color:rgba(49,101,148,0)" data-200="background-color:rgba(49,101,148,1)" data-anchor-target="#skrollr-body">
            <div class="container">

                <a href="/" class="navbar-brand brand" title="White Valley Software">
                    <img class="logo" src="/images/whitevalley-logo.svg" alt="Logo of White Valley Software" />White Valley <span class="hidden-xs">Software</span>
                </a>

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse navbar-right" id="menu">
                    <ul class="nav navbar-nav">
                        <li><a href="/work/" title="View some of our work">WORK</a></li>
                        <li><a href="/contact/" title="Get in touch with White Valley Software">CONTACT</a></li>
                    </ul>
                </div>

            </div>
        </nav>
    </div>

    <div id="skrollr-body">
        @RenderBody()

        <section id="footer" class="wrap wrap-primary">
            <div class="section shrink">
                <div class="auto-scroll scroll-up scroll-link"><a href="#body" class="animated"><span class="fa fa-angle-up"></span></a></div>
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <article class="body centertext">
                                <p>&copy; White Valley Software @DateTime.UtcNow.ToString("yyyy") | <a href="/privacy-policy/" title="Privacy policy of White Valley Software">privacy policy</a></p>
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="/scripts/skrollr.min.js"></script>
    @*<script src="/scripts/default-inline.js"></script>*@
    @RenderSection("Scripts", false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-19325368-1', 'auto');
        ga('send', 'pageview');
    </script>
    
    <!-- AppVersion: @WhiteValley.Helpers.AppSettingsHelper.AppVersion -->
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @RenderSection("Meta", false)
    <title>@Page.Title</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700,300,400' rel='stylesheet' type='text/css'>
    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="/styles/bootstrap.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="/content/animate.min.css" rel="stylesheet">@* no common recommended cdn for animate.css *@
    @Html.InlineStyle("theme-inline.min.css")
    @Html.StyleWithVersion("theme.min.css")
    @RenderSection("Styles", false)

    @* basic icon support for multiple platforms, doesn't include windows phone explicitly or < IE11
        but there is a favicon.ico file in the root containing 16, 32, and 48px images *@
    <link rel="apple-touch-icon-precomposed" href="/images/favicon152x152.png">
    <link rel="icon" href="/images/favicon96x96.png" sizes="96x96">

    @RenderSection("Head", false)
    
